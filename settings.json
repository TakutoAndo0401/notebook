{
  // Workbench関連の設定
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "statusBar.background": "#333333",
    "statusBar.noFolderBackground": "#212121",
    "statusBar.debuggingBackground": "#263238"
  },
  "workbench.editor.enablePreview": false,
  "editor.minimap.enabled": false,
  "editor.accessibilitySupport": "off",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "boundary",
  "editor.inlineSuggest.enabled": true,

  // JavaScript/TypeScript関連の設定
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.referencesCodeLens.showOnAllFunctions": true,
  "typescript.referencesCodeLens.showOnAllFunctions": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferGoToSourceDefinition": true,
  "typescript.preferGoToSourceDefinition": true,

  // Git関連の設定
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // GitLens関連の設定
  "gitlens.codeLens.enabled": false,
  "gitlens.launchpad.indicator.enabled": true,

  // Accessibility関連の設定
  "accessibility.signals.lineHasError": {
    "sound": "off",
    "announcement": "off"
  },
  "accessibility.signals.lineHasFoldedArea": {
    "sound": "off"
  },
  "accessibility.signals.lineHasBreakpoint": {
    "sound": "off"
  },
  "accessibility.signals.lineHasInlineSuggestion": {
    "sound": "off"
  },
  "accessibility.signals.terminalCommandFailed": {
    "sound": "off",
    "announcement": "off"
  },
  "accessibility.signals.voiceRecordingStarted": {
    "sound": "off"
  },
  "accessibility.signals.positionHasError": {
    "sound": "off",
    "announcement": "off"
  },

  // GitHub Copilot関連の設定
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "inlineChat.enableV2": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.scopeSelection": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.search.keywordSuggestions": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.generateTests.codeLens": true,
  "github.copilot.chat.languageContext.fix.typescript.enabled": true,
  "github.copilot.chat.languageContext.inline.typescript.enabled": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "コミットメッセージは日本語で書いてください。"
    },
    {
      "text": "コミットメッセージは Conventional Commits(URL: https://www.conventionalcommits.org/en/v1.0.0/) に従ってください"
    }
  ],
  
  // その他の設定
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning",
    "info"
  ],
  "files.saveConflictResolution": "askUser",
  "diffEditor.ignoreTrimWhitespace": false,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "importCost.typescriptExtensions": [
    "\\.tsx?$"
  ],
  "explorer.confirmDragAndDrop": true,
  "cSpell.overviewRulerColor": "blue",
  "cSpell.textDecorationColorFlagged": "blue",
  "cSpell.textDecorationColor": "blue",
  "material-icon-theme.activeIconPack": "react",
  "material-icon-theme.saturation": 1,
  "editor.fontSize": 13.5,
  "security.promptForLocalFileProtocolHandling": false,
  "htmltagwrap.tag": "div",
  "extensions.ignoreRecommendations": true,
}
